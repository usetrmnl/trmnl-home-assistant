{
  "name": "ha-trmnl",
  "version": "0.6.2",
  "description": "Send dashboard screens to your TRMNL",
  "author": "Ikraam Ghoor (based on puppet by Paulus Schoutsen)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/usetrmnl/trmnl-home-assistant.git"
  },
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "start": "bun run main.ts",
    "dev": "bun --watch main.ts",
    "mock:server": "bun run tests/mocks/ha-server.js",
    "mock:app": "MOCK_HA=true bun run main.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "MOCK_HA=true bun test tests/integration",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "logs:clear": "rm -rf logs/*.log && mkdir -p logs",
    "release:patch": "bun ../../scripts/release.js patch",
    "release:minor": "bun ../../scripts/release.js minor",
    "release:major": "bun ../../scripts/release.js major",
    "release:dry": "bun ../../scripts/release.js patch --dry-run"
  },
  "dependencies": {
    "@logtape/logtape": "^1.3.5",
    "gm": "^1.25.1",
    "home-assistant-js-websocket": "^9.6.0",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.34.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/gm": "^1.25.4",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
